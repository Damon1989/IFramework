<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <Version>2.0.0-prelease-0001</Version>
    <Description>Since 2.0.0, IFramework support bases on netcore standard2.0</Description>
    <Authors>Ivan</Authors>
    <PackageLicenseUrl></PackageLicenseUrl>
    <PackageProjectUrl>https://github.com/IvanZheng/IFramework</PackageProjectUrl>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
    <NoWarn>1701;1702;1591</NoWarn>
    <DocumentationFile>bin\Release\netstandard2.0\IFramework.xml</DocumentationFile>
  </PropertyGroup>

  <ItemGroup>
    <Compile Remove="Infrastructure\Logging\**" />
    <EmbeddedResource Remove="Infrastructure\Logging\**" />
    <None Remove="Infrastructure\Logging\**" />
  </ItemGroup>

  <ItemGroup>
    <Compile Remove="Config\Constants.cs" />
    <Compile Remove="Config\EndpointElement.cs" />
    <Compile Remove="Config\HandlerElementCollection.cs" />
    <Compile Remove="Config\MessageEndpointElementCollection.cs" />
    <Compile Remove="DependencyInjection\ILogInterceptionBehavior.cs" />
    <Compile Remove="DependencyInjection\IoCInstanceProvider.cs" />
    <Compile Remove="DependencyInjection\IoCServiceBehavior.cs" />
    <Compile Remove="DependencyInjection\LogInterceptionAttribute.cs" />
    <Compile Remove="DependencyInjection\LogInterceptionBehavior.cs" />
  </ItemGroup>

  <ItemGroup Condition="'$(TargetFramework)' == 'net461'">
    <Reference Include="System.Transactions" />
  </ItemGroup>
  

  <ItemGroup>
    <PackageReference Include="Microsoft.CSharp" Version="4.5.0-rc1" />
    <PackageReference Include="Microsoft.Extensions.Caching.Memory" Version="2.1.0-rc1-final" />
    <PackageReference Include="Microsoft.Extensions.Configuration" Version="2.1.0-rc1-final" />
    <PackageReference Include="Microsoft.Extensions.Configuration.Binder" Version="2.1.0-rc1-final" />
    <PackageReference Include="Microsoft.Extensions.Logging.Abstractions" Version="2.1.0-rc1-final" />
    <PackageReference Include="System.ComponentModel.Annotations" Version="4.5.0-rc1" />
    <PackageReference Include="System.Configuration.ConfigurationManager" Version="4.5.0-rc1" />
    <PackageReference Include="System.Data.Common" Version="4.3.0" />
    <PackageReference Include="System.Reflection.Emit" Version="4.3.0" />
    <PackageReference Include="System.Reflection.Emit.Lightweight" Version="4.3.0" />
  </ItemGroup>

</Project>